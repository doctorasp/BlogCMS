@using NewsBlog.Models;
@using PagedList.Mvc;
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - &ltNewsBlog&gt</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href='@Url.Content("~/Content/themes/base/all.css")' rel="stylesheet" type="text/css" />
    
    <style>
        header{
            height:200px;
        }
        header table{
           padding-left:200px;
        }
    </style>
</head>
<body>
    <div style="background-color:#4DB7AD; height:5px;margin-top:-30px;">
    </div>
    <div class="navbar navbar-default" style="background-color:transparent;">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <i class="glyphicon glyphicon-leaf" style="margin-top:12px; font-size:20px; color:#4DB7AD;"></i>
                @Html.ActionLink("NewsBlog", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "color:#4DB7AD; font-weight:bold; font-size:25px" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav nav-tabs">
                    <li>@Html.ActionLink("Головна", "Index", "Home")</li>
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Admin", "Admin", "Home")</li>
                        <li>@Html.ActionLink("Додати новину", "Create", "Articles")</li>
                    }
                    
                </ul>
                <div style="margin-left:auto; margin-right:auto;" id="innerSearch">
                    @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                    {
                        <input type="text" name="search" class="form-control" placeholder="Пошук" id="search">
                        <button id="searchbtn" type="submit" value="Пошук" style="color:#4ec0c0; " class="btn btn-link">
                            <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
                        </button>
                    }
                </div>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container" style="max-width :100%; padding:15px;">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryUI")
    @RenderSection("scripts", required: false)

    <script data-main="Scripts/app/main" src="~/Scripts/Require.js"></script>
    <a href="#" class="scrollup">Наверх</a>
</body>
</html>
