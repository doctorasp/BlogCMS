@using Microsoft.AspNet.Identity

<style>

.dropdown {
    position: relative;
    display: inline-block;
    padding-top:5px;
    float:right;
}
img{
    border-radius:50%;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #f9f9f9;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
}

.dropdown:hover .dropdown-content {
    display: block;
}

li:hover{
    color:#ff6a00;
    font-weight:bold;
}

.desc {
    padding: 15px;
    text-align: center;
}
</style>

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

    <div class="dropdown">
        <img src="Content/user.png" width="40" height="40">
        <div class="dropdown-content">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Головна", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })</li>
                <li><a href="javascript:document.getElementById('logoutForm').submit()">Вийти</a></li>
            </ul>
        </div>
    </div>
   }
}
else
{
    <div class="dropdown">
        <img src="~/Content/user.png"  width="40" height="40">
        <div class="dropdown-content">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Реєстрація", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
                <li>@Html.ActionLink("Вхід", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink", @class = "viewDialog", data_dialog_title = "Авторизація" })</li>
            </ul>
        </div>
    </div>
}
